<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/anunciante_foto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user"
            android:contentDescription="Foto do anunciante"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/anunciante_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maria da Silva"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/anunciante_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alegrete - RS"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/anuncio_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Roupas infantis para menino"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/anuncio_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
        android:textSize="14sp" />

    <Button
        android:id="@+id/contatar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contatar" />
</LinearLayout>
